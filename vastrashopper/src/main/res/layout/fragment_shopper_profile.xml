<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ShopperProfileFragment"
    android:orientation="vertical">

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="center_vertical|center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shopperProfilePic"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:contentDescription="@string/title_profile"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                app:civ_border_color="@color/primary_dark"
                app:civ_border_width="2dp" />

            <ImageView
                android:id="@+id/editProfilePic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/bg_profile_image_filled"
                android:padding="4dp"
                android:src="@drawable/ic_edit_mode_gray_500_24dp" />

        </FrameLayout>

        <TextView
            android:id="@+id/fashionDesignerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="Vandana Ghori"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/accent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/noOfFollowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="17"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/primary" />

            <TextView
                android:id="@+id/textFollowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="0dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/label_followings"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/primary" />

        </LinearLayout>
</LinearLayout>