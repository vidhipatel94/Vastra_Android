<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Vastra.Button.Filled" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_filled</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Vastra.Button.Outline" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_outline</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="Vastra.Button.Outline.Transparent" parent="Vastra.Button.Outline">
        <item name="android:background">@drawable/bg_button_outline_transparent</item>
    </style>

    <style name="Vastra.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/text_secondary_black</item>
    </style>

    <style name="Vastra.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_grey_box</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:paddingTop">28dp</item>
        <item name="android:textColor">@color/text_primary_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Vastra.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:background">@drawable/bg_grey_box</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:paddingTop">28dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/text_primary_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary_black</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Vastra.RegularText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Vastra.MediumText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Vastra.AlertDialog" parent="@android:style/Theme.Material.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Vastra.AlertDialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Vastra.AlertDialog.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Vastra.AlertDialog.Button</item>
    </style>

    <style name="Vastra.AlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent_dark</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

</resources>